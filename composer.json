{
    "name": "torq/torq-cms",
    "description": "The Torq CMS",
    "type": "project",
    "keywords": [
        "framework",
        "cms"
    ],
    "license": "Apache-2.0",
    "version": "3.0.0",
    "require": {
        "php": ">=7.2",
        "phpseclib/phpseclib" : "~2.0",
        "ext-json": "*",
        "ext-curl": "*",
        "doctrine/orm": "^2.6.2",
        "symfony/yaml": "2.*",
        "symfony/http-foundation": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "roave/security-advisories": "dev-master"
    },
    "archive" : {
        "exclude" : [
            ".*"
        ]
    },
    "autoload" : {
      "psr-0": {
          "Torq": "engine/"
      },

      "classmap": [
          "engine/Core/",
          "engine/Bundles/",
          "engine/Models/",
          "engine/Controllers/"
      ]
    },
    "config" : {
      "platform": {
        "php": "7.2"
      }
    }
}
